    "playwright": "^1.12.2",
    "posthtml": "^0.16.5",
    "posthtml-expressions": "^1.8.1",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "i18next": "^20.4.0",
    "lint-staged": "^11.0.0",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.11.4",
    "react-router-dom": "^5.2.0",
    "sass": "^1.34.1",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "lo_ln": "ln -sTf config/localhost.1234.json src/config/config.json",
    "mirrorz_ln": "ln -sTf config/mirrorz.org.json src/config/config.json",
    "other_ln": "ln -sTf ../config/config.json src/parser/config.json && ln -sTf ../config/config.json src/i18n/config.json",
    "dev_env": "yarn lo_ln && yarn other_ln",
    "mirrorz_env": "yarn mirrorz_ln && yarn other_ln",
    "legacy_env": "ln -sTf ../ legacy/mirrorz && ln -sTf ../src/config/config.json legacy/config.json && ln -sTf ../src/i18n legacy/i18n && ln -sTf ../static/json/legacy legacy/json-legacy",
    "debug_build": "yarn dev_env && parcel build index.html",
    "build": "parcel build --no-source-maps index.html",
    "postbuild": "rsync -rL --exclude=.git static robots.txt CNAME dist/ && ln -sf ./index.html dist/404.html",
    "legacy_build": "cd legacy && node ./generator.js && cd ../ && cp -ar legacy/dist/_ dist/",
    "ohmymirrorz_date": "sed -i \"s/^VERSION.*/VERSION = '$(date +'%Y%m%d')'/g\" dist/oh-my-mirrorz.py",
    "ohmymirrorz_mirrors": "sed -i \"s^mirrors = \\[\\]^mirrors = $(node -e 'console.log(JSON.stringify(require(\"./src/config/mirrors\")))')^\" dist/oh-my-mirrorz.py",
    "ohmymirrorz_build": "cp scripts/oh-my-mirrorz/oh-my-mirrorz.py dist/ && yarn ohmymirrorz_date && yarn ohmymirrorz_mirrors",
    "half_start": "(yarn debug_build && yarn postbuild && cd dist && python3 ../scripts/gh-cors.py 1234)",
    "full_start": "(yarn debug_build && yarn legacy_env && yarn legacy_build && yarn postbuild && cd dist && python3 ../scripts/gh-cors.py 1234)",
    "test": "playwright test --config=tests/playwright.config.ts",
    "download-snapshot-baseline": "ts-node tests/download-snapshot-baseline.ts",
    "lint:fix": "eslint --fix ./src --ignore-path .gitignore"
  }
}
